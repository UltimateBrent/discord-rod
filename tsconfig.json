{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "dist",
		"sourceMap": true,
		"resolveJsonModule": true,
		"lib": [
			"es6",
			"dom"
		],
		"esModuleInterop": true
	},
	"include": [
		"src/*.ts",
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}